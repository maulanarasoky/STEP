<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/rounded_headline"
    tools:showIn="@layout/carousel">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/firasans"
        android:maxLines="1"
        android:text="@string/welcome_to_step"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <TextView
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:fontFamily="@font/firasans"
        android:maxLines="2"
        android:text="@string/this_is_step"
        android:textColor="#B5B5B5"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/txt_title"
        android:background="@drawable/headline_pic"
        android:contentDescription="@string/headline_pic" />

</RelativeLayout>